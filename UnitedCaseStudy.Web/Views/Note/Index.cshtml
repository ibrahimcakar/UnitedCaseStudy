@model List<Note>
@{
    string ParentNoteId = "";
    if (ViewBag.ParentNoteId!=null)
    {
        ParentNoteId = ViewBag.ParentNoteId.ToString();
    }
}
<div class="row form-group">
    <div class="col-lg-12">
        <a href="/Note/Create@(!string.IsNullOrEmpty(ParentNoteId)? "/"+ParentNoteId : "")" class="btn btn-primary" style="float: right;">Ekle</a>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>NoteText</td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (Model != null && Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.NoteText</td>
                                    <td width="125px"><a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary"><i class="la la-pencil"></i> Düzenle</a></td>
                                    <td width="125px"><a asp-action="Index" asp-route-id="@item.Id" class="btn btn-secondary"><i class="la la-pencil"></i> Alt Notlar</a></td>
                                    <td width="125px"><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="la la-pencil"></i> Sil</a></td>
                                </tr>
                            }
                        }
                        else
                        {

                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>